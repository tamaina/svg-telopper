{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "no-console": [ false ],
        "semicolon": [true, "never"],
        "no-unused-expression": [true, "allow-new"],
        "curly": [true, "ignore-same-line"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "indent": [true, "spaces", 2]
    },
    "rulesDirectory": []
}